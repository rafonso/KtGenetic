                        <children>
                            <CheckBox fx:id="chbElitism" mnemonicParsing="false" selected="true" text="Elitism">
                                <tooltip>
                                    <Tooltip
                                            text="It reserves 10 % or at least 1 of the members of each generation with best fitness to the next generation."/>
                                </tooltip>
                            </CheckBox>
                            <CheckBox fx:id="chbRepeatedValues" contentDisplay="TOP" mnemonicParsing="false"
                                      selected="true" text="Allow repeated values">
                                <tooltip>
                                    <Tooltip
                                            text="When not checked, ensures that chromosomes of each generation will not be repeated"/>
                                </tooltip>
                            </CheckBox>
                        </children>
                    </VBox>
                </children>
            </FlowPane>
            <GridPane fx:id="pnlButtons" GridPane.columnIndex="5">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
